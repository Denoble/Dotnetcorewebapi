@model DevLiftMediWebAPI.Models.TodoItem

@{ Layout = "_Layout"; }
<h2>Edit</h2>



    
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name">Name:</label> 
                <input class="form-control" name="Name"  style="width:25%" required value="@Model.Name"  />
            </div>
            <div class="form-group">
                <label for="IsComplete">IsComplete:</label>
                <input class="form-control" name="IsComplete" style="width:25%" required  value="@Model.IsComplete.ToString()"  />
            </div>
            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    
    <a asp-action="Index">Back to List</a>


